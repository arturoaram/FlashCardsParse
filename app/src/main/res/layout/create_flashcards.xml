<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/creatingfc"
    android:onClick="newAddToDB">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="@string/Term"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="@string/Definition"
        android:layout_weight="0.42"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="80dp"
      android:text="Start Camera"
        android:src="@drawable/camera"
        android:onClick="selectImage"
        android:id="@+id/startCamera"
        android:layout_weight="0.06"
        android:layout_gravity="right"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="83dp"
        android:layout_height="60dp"

        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_mas_blue"
        android:onClick="newAddToDB"
        android:layout_marginRight="73dp"
        android:layout_below="@+id/startCamera"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Done"
        android:onClick="doneBtn"
        android:id="@+id/doneBtn"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/term_et"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>