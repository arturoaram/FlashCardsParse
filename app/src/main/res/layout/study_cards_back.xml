<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fb8282">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="350dp"
        android:layout_height="250dp"
        android:id="@+id/cardsview2"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="20dp"
        android:paddingStart="300dp"

        android:paddingEnd="300dp"
        android:padding="300dp"
        android:background="#f18585"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/Definition"
            android:layout_height="wrap_content"
            android:id="@+id/definitionCard"
            android:layout_alignTop="@+id/cardsview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="102dp"
            android:gravity="center" />



    </android.support.v7.widget.CardView>



</RelativeLayout>