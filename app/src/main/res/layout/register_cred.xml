<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d80a9">
<RelativeLayout
    android:id="@+id/Register"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_gravity="center_horizontal|bottom"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#1d80a9">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/registerNameEditText"
        android:layout_marginLeft="0dp"
        android:hint="  Name"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/registerEmailEditText"
        android:layout_alignStart="@+id/registerEmailEditText"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/registerUsernameEditText"
        android:hint="  Username"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/registerPasswordEditText"
        android:layout_alignEnd="@+id/registerPasswordEditText"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="-10dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/registerPasswordEditText"
        android:hint=" Password"
        android:backgroundTint="#000000"
        android:background="#ffffff"
        android:backgroundTintMode="screen"
        android:layout_above="@+id/registerRegisterButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="-10dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/registerEmailEditText"
        android:hint="  Email"
        android:background="#ffffff"
        android:layout_above="@+id/registerUsernameEditText"
        android:layout_alignStart="@+id/registerUsernameEditText"
        android:layout_marginBottom="20dp" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/Register"
        android:id="@+id/registerRegisterButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/register" />
</RelativeLayout>

</RelativeLayout>