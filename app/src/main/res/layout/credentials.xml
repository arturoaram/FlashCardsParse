<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7941e">


                <RelativeLayout
                    android:id="@+id/Login"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="#f7941e">

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/credentialsUsernameEditText"
                        android:hint="Username"
                        android:layout_above="@+id/credentialsPasswordEditText"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="40dp"
                        android:background="#FFFFFF"
                        android:layout_marginLeft="45dp" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/credentialsPasswordEditText"
                        android:hint="@string/Enter_your_password"
                        android:background="#FFFFFF"
                        android:layout_above="@+id/credentialsSignInButton"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="45dp" />

                    <ImageButton
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="@string/Sign_In"
                        android:id="@+id/credentialsSignInButton"
                        android:singleLine="false"
                        android:onClick="logInButton"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/sign_in"
                        android:layout_marginBottom="25dp" />

                </RelativeLayout>





        </RelativeLayout>


